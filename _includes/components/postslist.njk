<section>
	{% for post in postslist | reverse %}
		<article class="bg-gray-50 p-4 mb-4 border-b-4 border-light-blue-500" {% if post.url == url %} data-current="current item"{% endif %}>
			
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
		<div class="flex justify-end">
			<div class="mr-3 text-sm">
			by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a>
			</div>
					<div class="inline-block w-auto text-xs bg-gray-200 pt-1 pb-1 pr-3 mr-2 pl-3 rounded ">
					<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }} 
					</small>
				</time>
			</div>
			</div>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary | safe }} 

				</p>
			{% endif %}
		
			{% if post.data.tags %}
				<div class="flex">
				<div class="mr-2 text-sm">Posted in: </div>
					{% for tag in post.data.tags %}
						{%- if tag != "post" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
							<div class="tag inline-block w-auto text-xs bg-blue-100 hover:bg-gray-300 mr-2 pt-1 pr-3 pb-1 pl-3 rounded ">
							<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
							</div>
						{%- endif -%}
					{% endfor %}
				</div>
			{% endif %}
		</article>
	{% endfor %}
</section>